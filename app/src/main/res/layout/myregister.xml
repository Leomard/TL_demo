<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/blue_sky">

    <TextView
        android:text="@string/my_NickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:textSize="20dp"
        android:layout_marginTop="104dp"
        android:id="@+id/justtext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_below="@+id/justtext"
        android:layout_alignStart="@+id/justtext"
        android:layout_marginStart="49dp"
        android:layout_marginTop="122dp" />

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignEnd="@+id/editText11"
        android:layout_marginEnd="62dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:background="@drawable/mysharp"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_alignBaseline="@+id/justtext"
        android:layout_alignBottom="@+id/justtext"
        android:layout_toEndOf="@+id/button11" />
</RelativeLayout>