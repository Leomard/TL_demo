<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/endlogin">


    <Button
        android:text="登录"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginin"
        android:layout_marginStart="73dp"
        android:layout_alignBaseline="@+id/myregister"
        android:layout_alignBottom="@+id/myregister"
        android:layout_alignParentStart="true" />

    <Button
        android:text="游客登录"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/myregister"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/loginpassword"
        android:layout_alignEnd="@+id/loginpassword" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/login2"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/loginpassword"
        android:layout_toStartOf="@+id/loginname"
        android:layout_marginEnd="14dp" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:hint="请输入密码"
        android:ems="10"
        android:id="@+id/loginpassword"
        android:background="@drawable/background_shape"
        android:inputType="number"
        android:layout_marginTop="19dp"
        android:layout_marginStart="53dp"
        android:layout_below="@+id/loginname"
        android:layout_alignStart="@+id/loginin" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="请输入用户名"
        android:textColor="#9f9f9f"
        android:ems="10"
        android:paddingLeft="5dp"
        android:background="@drawable/background_shape"
        android:id="@+id/loginname"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/loginpassword" />

    <ImageView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/login1"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView2" />

</RelativeLayout>